root = true

[*]
end_of_line = lf
charset = utf-8

[*.sh]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,md}]
max_line_length = 88
indent_style = space
indent_size = 4
insert_final_newline = true

[*.py]
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.rst]
max_line_length = 0
indent_style = space
indent_size = 3

[*.html]
max_line_length = 0
indent_style = space
indent_size = 2
